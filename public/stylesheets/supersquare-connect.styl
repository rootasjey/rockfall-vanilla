.square[function='connect'] {
	color white

	.mini-icon-panel {
        width 40px
        position absolute
        display inline-block
    }
    .mini-icon{
        width 30px
        height 30px
        opacity 0.2


        position relative

        cursor pointer
        transition 0.5s

        &[isGlowing='true'] {
            animation-duration: 1s
            animation-direction: alternate
            animation-iteration-count infinite
            animation-name: glowIcon
        }
    }

    .connect-block {
        width 300px
        margin auto
        margin-top 10px

        text-align center

        .block-title {
        	font-size 2em
        }

        .login-form {
            .form-title {
                color white
                font-size 1.3em

                display inline-block
                margin-bottom 10px
            }

            .input-container {
            	width 240px
            	display block
            	margin auto

            	input {
	                height 30px
	                width 180px

	                margin auto
	                margin-top 10px
	                display inline-block

	                opacity 0.5
	                position relative

	                border-radius 2px
	                border 3px inset rgba(0, 0, 0, 0.15)

	                transition 0.5s

	                &:hover {
	                    opacity 1
	                    transition 0.5s
	                }
            	}

            	.img-input {
	            	height 36px
	            	width 36px
	            	
	            	top 10px
	            	right 10px
	            	position relative
	            	display inline-block
	            }
            }
            

            .form-icon {
                height 40px
                width 40px

                margin-top 20px
                padding 10px
                transition 0.5s

                &:hover {
                	height 48px
                	width 48px
                	transition 0.5s
                }

                &:active {
                	height 40px
                	width 40px
                	transition 0.5s
                }
            }

            .text-button {
            	margin 5px
            	opacity 0.5
            	display inline-block
            	transition 0.5s

            	&:hover {
            		opacity 1
            		transition 0.5s
            	}
            	&[stats='active'] {
            		opacity 1
            	}
            }

            input[type='submit'] {
                opacity 0
                display block
            }
        }
    }

    .user-dashboard {
        position relative
        margin-top 100px

        .message {
            font-size 1.3em
            position relative

            text-align center
            display inline-block

            margin auto
            width 450px
        }

        .user-panel {
            width 200px
            height 200px

            .avatar-container {
                height 90px
                width 90px
                overflow hidden

                background black
                border-radius 40px

                .avatar {
                    height 90px
                    width 90px
                }

                .username {
                    color white
                }
            }
        }

        .dashboard-square {
            height 250px
            width 250px

            .dashboard-square-top {
                height 200px
            }

            .dashboard-square-title {
                height 50px
                text-align center
                display inline-block
            }
        }
    }
    
}