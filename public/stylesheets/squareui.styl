// Main UI
// which contains the game
// and the main functions
// --------
#square-ui{
    .mini-icon{
        opacity 0.2
        width 30px
        height 30px

        margin-right 5px

        cursor pointer
        transition 1s

        &:hover{
            opacity 1
            transition 1s
        }

        &[isGlowing='true'] {
            animation-duration: 1s
            animation-direction: alternate
            animation-iteration-count infinite
            animation-name: glowIcon

        }
    }

    .square-ui-game {
        height 60%
        width 67%

        margin auto
    }

    .vertiacal-pan {
        width 140px
        height 300px
        opacity 0.5
        display inline-block

        text-align center
        cursor pointer
        color white

        margin auto
        margin-top 10px
        margin-left 5px
        padding 5px

        background black
        transition 0.5s

        &:hover {
            opacity 1
            width 155px
            transition 0.5s

            .text-info {
                color white
            }
        }

        img {
            height 70px
            width 70px
            display block

            margin auto
            margin-top 30px
            margin-bottom 30px
        }

        .text-info {
            margin-top 10px
            display inline-block
            color transparent
        }
    }
}


// Second-panel
// which contains
// others functions
// like messages, setings
// ------------
.second-panel {
    height 300px
    width 840px

    position relative
    left -10px

    margin auto
    margin-top -10px
    padding-top 10px
    background #e74c3c

    border-radius 5px

    -moz-box-shadow: 0 0 20px #000000;
    -webkit-box-shadow: 0 0 20px #000000;
    box-shadow: 0 0 20px #000000;

    // icons
    .mini-icon {
        opacity 0.2
        width 30px
        height 30px

        margin 5px

        cursor pointer
        transition 1s

        &:hover{
            opacity 1
            transition 1s
        }
    }

    .message-panel {
        .second-panel-title {
            width 100%
            margin auto

            color white
            font-size 2em
            text-align center

            display inline-block

            .mini-icon {
                display block
                margin auto
            }
        }
    }
}

// Glow Animation for icons
// --------------
@keyframes glowIcon {
    from {
        opacity 0.2
    }

    to {
        opacity 0.8
    }
}
