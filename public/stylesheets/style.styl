/*@import 'nib'*/

/*-------------------*/
/*-----VARIABLES-----*/
/*-------------------*/
center-size = 500px
height-main-ui-component = 500px

main-font = exothinitalic
second-font = quicksandregular

color-alizarin = #e74c3c
color-peter-river = #3498db
color-emerald = #2ecc71
color-belize-hole = #2980b9
color-silver = #bdc3c7
/*------------------*/


/*-------------------*/
/*-----CSS-STYL-----*/
/*-----------------*/
html, body{
	margin:0;
	padding:0;
	height:100%;
	font-family: main-font;
	background-color:white;

	min-height: 100%;
	position: relative;
}


// -------
// CONTENT
// -------
#body {
    min-height: 100%;
    position: relative;

    // HEADER
    // ------
    #header {
        height: 150px;
        background: #eee;

        padding-top: 10px;
        text-align: center;
        transition: 0.5s;

        h1 {
            font-size: 4em;
            cursor: pointer;
        }

        &:hover {
            transition: 0.5s;
            color: color-alizarin;
        }
    }

    // BODY
    // ----
    #container {
        padding-top: 40px;
        padding-bottom: 130px; /* Height of the footer */
        background: white;
		transition: 1s;

        #main-ui {
            width: 80%;
            height: 600px;
            min-widgth: 450px;

            position: relative;

            margin: auto;
            padding: 20px;
            margin-top: 100px;
            background: transparent;

            color: white;


            #game-ui {
                top: 0;
                left: 328px;
                position: absolute;

                width: 800px;
                height: height-main-ui-component;

                padding: 20px;
                margin-left: 2px;

                background: color-peter-river;
                border: 10px solid rgba(0, 0, 0, 0.01);
                border-radius: 10px;

                display: inline-block;
                transition: 1s;

                &:hover {
                    border: 10px solid rgba(0, 0, 0, 0.30);
                    transition: 1s;
                }

				#game-panel {
					display: none;
				}
            }
        }
    }


    // BODY
    // ----
    #footer {
        width: 100%;
        height: 120px; /* Height of the footer */
        background: #eee;
        text-align: center;

        bottom: 0;
        position: absolute;

        ul {
            margin-top: 20px;
            list-style-type: none;

            a {
                color: black;
                text-decoration: none;

                font-size: 2em;
                transition: 0.5s;

                &:hover {
                    color: color-alizarin;
                    transition: 0.5s;
                }
            }
        }
    }
}
