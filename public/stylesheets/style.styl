/*-------------------*/
/*-----CSS-STYL-----*/
/*-----------------*/
html, body{
	margin:0;
	padding:0;
	height:100%;
	font-family: main-font;
	background-color:white;

	min-height: 100%;
	position: relative;
}

#body {
    min-height: 100%;
    position: relative;

    #header {
        min-height: 150px;
        background: #eee;

        padding-top: 10px;
        text-align: center;
        transition: 0.5s;

        h1 {
            font-size: 3.5em;
            cursor: pointer;
        }

        &:hover {
            transition: 0.5s;
            color: color-alizarin;
        }
    }

    #container {
        padding: 10px;
        padding-bottom: 130px; /* Height of the footer */
    }

    #footer {
        width: 100%;
        height: 120px; /* Height of the footer */
        background: #eee;
        text-align: center;

        bottom: 0;
        position: absolute;

        ul {
            margin-top: 20px;
            list-style-type: none;

            a {
                color: black;
                text-decoration: none;
                transition: 0.5s;

                &:hover {
                    color: color-alizarin;
                    transition: 0.5s;
                }
            }
        }
    }
}

