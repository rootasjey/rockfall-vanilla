/*@import 'nib'*/

/*-------------------*/
/*-----VARIABLES-----*/
/*-------------------*/
center-size = 500px
height-main-ui-component = 500px

main-font = exothinitalic
second-font = quicksandregular

color-alizarin = #e74c3c
color-peter-river = #3498db
color-emerald = #2ecc71
color-belize-hole = #2980b9
color-silver = #bdc3c7
/*------------------*/


/*-------------------*/
/*-----CSS-STYL-----*/
/*-----------------*/
html, body{
	margin:0;
	padding:0;
	height:100%;
	font-family: main-font;
	background-color:white;

	min-height: 100%;
	position: relative;
}


// -------
// CONTENT
// -------
#body {
    min-height: 100%;
    position: relative;

    // HEADER
    // ------
    #header {
        min-height: 150px;
        background: #eee;

        padding-top: 10px;
        text-align: center;
        transition: 0.5s;

        h1 {
            font-size: 4em;
            cursor: pointer;
        }

        &:hover {
            transition: 0.5s;
            color: color-alizarin;
        }
    }

    // BODY
    // ----
    #container {
        padding: 10px;
        padding-bottom: 130px; /* Height of the footer */

        #main-ui {
            width: 80%;
            height: 600px;
            min-widgth: 450px;

            position: relative;

            margin: auto;
            padding: 20px;
            margin-top: 100px;
            background: transparent;

            color: white;

            #side-panel {
                width: 250px;
                height: height-main-ui-component;

                top: 0;
                // left: 0;
                position: absolute;

                padding: 20px;
                background: color-alizarin;
                border-radius: 10px;
                display: inline-block;

                border: 10px solid rgba(0, 0, 0, 0.01);
                transition: 1s;

                &:hover {
                    border: 10px solid rgba(0, 0, 0, 0.30);
                    transition: 1s;
                }

                .user-avatar {
                    display: inline-block;

                    .user-avatar-img {
                        height: 90px;
                        width: 90px;
                        margin: auto;

                        border-radius: 60px;
                        background: rgba(0,0,0,.5);
                    }

                    .user-avatar-name {

                    }
                }

                .power-up-panel {
                    margin-top: 30px;

                    .title {
                        font-size: 2em;
                        font-weight: bolder;
                    }
                    .power-up {
                        display: inline-block;
                        height: 50px;
                        width: 50px;
                        background: rgba(0,0,0,.5);
                        border-radius: 40px;

                        margin: 5px;
                    }
                }

                div.user-score {
                    text-align: center;
                    font-size: 3em;
                    font-family: exoregular;
                }

                div.user-panel {
                    width: 60%;
                    margin: auto;

                    .user-panel-icon {
                        height: 30px;
                        width: 30px;

                        opacity: 0.5;
                        margin: 10px;
                        margin-bottom: -20px;

                        display: inline-block;
                        cursor: pointer;
                        transition: 0.5s;

                        &:hover {
                            opacity: 1;
                            transition: 0.5s;
                        }
                    }
                }
            }


            #game-ui {
                top: 0;
                left: 326px;
                position: absolute;

                width: 800px;
                height: height-main-ui-component;

                padding: 20px;
                margin-left: 2px;

                background: color-peter-river;
                border: 10px solid rgba(0, 0, 0, 0.01);
                border-radius: 10px;

                display: inline-block;
                transition: 1s;

                &:hover {
                    border: 10px solid rgba(0, 0, 0, 0.30);

                    transition: 1s;
                }
            }
        }
    }


    // BODY
    // ----
    #footer {
        width: 100%;
        height: 120px; /* Height of the footer */
        background: #eee;
        text-align: center;

        bottom: 0;
        position: absolute;

        ul {
            margin-top: 20px;
            list-style-type: none;

            a {
                color: black;
                text-decoration: none;

                font-size: 2em;
                transition: 0.5s;

                &:hover {
                    color: color-alizarin;
                    transition: 0.5s;
                }
            }
        }
    }
}



