/*@import 'nib'*/

/*-------------------*/
/*-----VARIABLES-----*/
/*-------------------*/
center-size = 500px
height-main-ui-component = 500px

main-font = exothinitalic
second-font = quicksandregular

color-alizarin = #e74c3c
color-peter-river = #3498db
color-emerald = #2ecc71
color-belize-hole = #2980b9
color-silver = #bdc3c7
/*------------------*/


/*-------------------*/
/*-----CSS-STYL-----*/
/*-----------------*/
html, body{
	margin:0;
	padding:0;
	height:100%;
	font-family: main-font;
	background-color:white;

	min-height: 100%;
	position: relative;
}


// -------
// CONTENT
// -------
#body {
    min-height: 100%;
    position: relative;

    // HEADER
    // ------
    #header {
        min-height: 150px;
        background: #eee;

        padding-top: 10px;
        text-align: center;
        transition: 0.5s;

        h1 {
            font-size: 4em;
            cursor: pointer;
        }

        &:hover {
            transition: 0.5s;
            color: color-alizarin;
        }
    }

    // BODY
    // ----
    #container {
        padding: 10px;
        padding-bottom: 130px; /* Height of the footer */
        background: white;
		transition: 1s;

        #main-ui {
            width: 80%;
            height: 600px;
            min-widgth: 450px;

            position: relative;

            margin: auto;
            padding: 20px;
            margin-top: 100px;
            background: transparent;

            color: white;

            #side-panel {
                width: 250px;
                height: height-main-ui-component;

                top: 0;
                // left: 0;
                position: absolute;

                padding: 20px;
                background: color-alizarin;
                border-radius: 10px;
                display: inline-block;

				overflow-y: auto;
				// overflow-x: hidden;
                border: 10px solid rgba(0, 0, 0, 0.01);
                transition: 1s;


                &:hover {
                    border: 10px solid rgba(0, 0, 0, 0.30);
                    transition: 1s;
                }

                .user-avatar {
                    width: 100px;
                    margin: auto;
                    cursor: pointer;

                    .user-avatar-img {
                        height: 90px;
                        width: 90px;

                        border-radius: 60px;
                        background: rgba(0,0,0,.5);
                        transition: 0.5s;

                        &:hover {
                            height: 95px;
                            width: 95px;
                            transition: 0.5s;
                        }
                    }

                    .user-avatar-name {
                        margin: 10px;
                        display: inline-block;
                    }
                }

                .power-up-panel {
                    margin-top: 30px;

                    .title {
                        font-size: 2em;
                        font-weight: bolder;
                    }
                    .power-up {
                        height: 50px;
                        width: 50px;

                        margin: 5px;
                        border-radius: 40px;
                        background: rgba(0,0,0,.5);
                        display: inline-block;

                        cursor: pointer;
                        transition: 0.5s;

                        &:hover {
                            height: 55px;
                            width: 55px;
                            transition: 0.5s;
                        }
                    }
                }

                div.user-score {
                    text-align: center;
                    font-size: 3em;
                }

                div.user-panel {
                    width: 160px;
                    margin: auto;

                    .user-panel-icon {
                        height: 30px;
                        width: 30px;

                        opacity: 0.5;
                        margin: 10px;
                        margin-bottom: -20px;

                        display: inline-block;
                        cursor: pointer;
                        transition: 0.5s;

                        &:hover {
                            opacity: 1;
                            transition: 0.5s;
                        }
                    }
                }

                .settings {
					opacity: 0;
					position: relative;
					// transition: 1s;

                    // Title
                    h1 {
                        margin: auto;
                        display: block;

                        font-size: 2.5em;
                    }

                    h2 {
                        display: block;
                    }

                    // Choose the background color
                    .background-color {
                        height: 40px;
                        width: 40px;

                        margin: 10px;
                        margin-top: 0;

                        cursor: pointer;
                        border-radius: 20px;
                        display: inline-block;

                        transition: 0.5s;

                        &:hover {
                            height: 45px;
                            width: 45px;

                            transition: 0.5s;
                        }
                    }
					.edit-info {
						cursor: pointer;
						// transition: 0.5s;

						.edit-button {
							background: black;
							padding: 5px;
							opacity: 0;
						}

						&:hover {
							font-weight: bolder;
							transition: 0.5s;

							.edit-button {
								opacity: 0.5;
							}
						}
					}

					input {
						display: none;
						margin-top: 5px;
						margin-bottom: 15px;
					}

					select {
						margin-bottom: 10px;
					}
					.color-visualiser {
						height: 20px;
						width: 20px;
						transition: 1s;

						margin-left: 20px;
						margin-bottom: -5px;
						border-radius: 20px;
						display: inline-block;
					}
                }

				.notifications {
					opacity: 0;

					// Title
					h1 {
						margin: auto;
						display: block;

						font-size: 2.5em;
					}

					h2 {
						display: block;
					}
				}

				.toggle {
					display: block;
					cursor: pointer;
					opacity: 0.5;
					font-size: 1.2em;

					&:hover {
						opacity: 1;
					}
				}

                // Back to the main user panel
                .icon-back {
                    height: 60px;
                    width: 60px;

                    margin: auto;
					margin-top: 20px;
					margin-bottom: 10px;

                    cursor: pointer;
                    opacity: 0.5;
					display: block;

                    // bottom: 30px;
                    // left: 110px;
                    position: relative;

                    -webkit-transform: rotate(180deg);
                    -moz-transform: rotate(180deg);
                    -ms-transform: rotate(180deg);
                    -o-transform: rotate(180deg);
                    transform: rotate(180deg);
                    transition: 0.5s;

                    &:hover {
                        opacity: 1;
                        transition: 0.5s;
                    }
                }
            }


            #game-ui {
                top: 0;
                left: 328px;
                position: absolute;

                width: 800px;
                height: height-main-ui-component;

                padding: 20px;
                margin-left: 2px;

                background: color-peter-river;
                border: 10px solid rgba(0, 0, 0, 0.01);
                border-radius: 10px;

                display: inline-block;
                transition: 1s;

                &:hover {
                    border: 10px solid rgba(0, 0, 0, 0.30);

                    transition: 1s;
                }
            }
        }
    }


    // BODY
    // ----
    #footer {
        width: 100%;
        height: 120px; /* Height of the footer */
        background: #eee;
        text-align: center;

        bottom: 0;
        position: absolute;

        ul {
            margin-top: 20px;
            list-style-type: none;

            a {
                color: black;
                text-decoration: none;

                font-size: 2em;
                transition: 0.5s;

                &:hover {
                    color: color-alizarin;
                    transition: 0.5s;
                }
            }
        }
    }
}
