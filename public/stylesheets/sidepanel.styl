// SIDE PANEL STYL
// ---------------
// ---------------
/*@import 'nib'*/

/*-------------------*/
/*-----VARIABLES-----*/
/*-------------------*/
center-size = 500px
height-main-ui-component = 500px

main-font = exothinitalic
second-font = quicksandregular

color-alizarin = #e74c3c
color-peter-river = #3498db
color-emerald = #2ecc71
color-belize-hole = #2980b9
color-silver = #bdc3c7
/*------------------*/

#side-panel {
    width: 250px;
    height: height-main-ui-component;

    top: 0;
    position: absolute;

    padding: 20px;
    background: color-alizarin;
    border-radius: 10px;
    display: inline-block;

    overflow-y: hidden;
    overflow-x: hidden;

    border: 10px solid rgba(0, 0, 0, 0.01);
    transition: 1s;


    &:hover {
        border: 10px solid rgba(0, 0, 0, 0.30);
        transition: 1s;
    }

    .user-avatar {
        width: 100px;
        margin: auto;
        cursor: pointer;

        .user-avatar-img {
            height: 70px;
            width: 70px;
            padding: 20px;

            border-radius: 60px;
            background: rgba(0,0,0,.5);
            transition: 0.5s;

            &:hover {
                height: 85px;
                width: 85px;
                padding: 10px;
                transition: 0.5s;
            }
        }

        .user-avatar-name {
            margin: 10px;
            display: inline-block;
        }
    }

    .power-up-panel {
        margin-top: 30px;

        .title {
            font-size: 2em;
            font-weight: bolder;
        }
        .power-up {
            height: 10px;
            width: 10px;

            margin: 5px;
            padding: 20px;
            border-radius: 40px;
            background: rgba(0,0,0,.5);
            display: inline-block;

            cursor: pointer;
            transition: 0.5s;

            &:hover {
                height: 45px;
                width: 45px;
                padding: 10px;
                transition: 0.5s;
            }
        }
    }

    div.user-score {
        margin-top: -10px;
        margin-bottom: -10px;
        text-align: center;
        font-size: 3em;
    }

    div.user-panel {
        width: 160px;
        margin: auto;

        .user-panel-icon {
            height: 30px;
            width: 30px;

            opacity: 0.5;
            margin: 10px;
            margin-bottom: -20px;

            display: inline-block;
            cursor: pointer;
            transition: 0.5s;

            &:hover {
                opacity: 1;
                transition: 0.5s;
            }
        }
    }

    .settings {
        opacity: 0;
        position: relative;

        // Title
        h1 {
            margin: auto;
            display: block;

            font-size: 3em;
        }

        h2 {
            display: block;
        }

        .background-color-section {
            margin-top: -20px;
            margin-bottom: 10px;
        }
        // Choose the background color
        .background-color {
            height: 40px;
            width: 40px;

            margin-right: 10px;

            cursor: pointer;
            border-radius: 20px;
            display: inline-block;

            transition: 0.5s;

            &:hover {
                height: 45px;
                width: 45px;

                transition: 0.5s;
            }
        }
        span.edit-info {
            cursor: pointer;
            display: none;

            font-size: 1.5em;
            margin-bottom: 5px;

            .edit-button {
                background: black;
                padding: 5px;
                opacity: 0;
            }

            &:hover {
                font-weight: bolder;
                transition: 0.5s;

                .edit-button {
                    opacity: 0.5;
                }
            }
        }

        h2.edit-info {
            margin: 0;
            margin-top: 10px;
            cursor: pointer;

            .edit-button {
                background: black;
                padding: 5px;
                opacity: 0;
            }

            &:hover {
                font-weight: bolder;
                transition: 0.5s;

                .edit-button {
                    opacity: 0.5;
                }
            }
        }

        input {
            display: none;
            margin-top: 5px;
            margin-bottom: 15px;

            width: 200px;
            height: 20px;

            opacity: 0.5;
            border: 1px solid color-alizarin;
            transition: 0.5s;

            &:hover {
                opacity: 0.5;
                border: 5px solid black;
                transition: 0.5s;
            }
            &:focus {
                opacity: 1;
                border: 10px solid color-alizarin;
                transition: 0.5s;
            }
        }

        select {
            margin-bottom: 10px;
        }
        .color-visualiser {
            height: 20px;
            width: 20px;
            transition: 1s;

            margin-left: 20px;
            margin-bottom: -5px;
            border-radius: 20px;
            display: inline-block;
        }

        .button-rectangle {
            cursor: pointer;
            width: 90px;

            padding: 10px;
            opacity: 0.5;
            display: inline-block;
            background-color: black;

            margin-top: 10px;
            margin-right: 10px;

            text-align: center;
            transition: 0.5s;

            &:hover {
                opacity: 1;
                transition: 0.5s;
            }
        }
    }

    .notifications {
        opacity: 0;

        // Title
        h1 {
            margin: auto;
            display: block;

            font-size: 2.5em;
        }

        h2.notifications-subtitle {
            display: block;
            margin-top: 0;
            cursor: pointer;
        }


        .informations {
            max-height: 160px;
            min-height: 30px;
            overflow-y: auto;
            // transition: 0.5s;
        }

        .messages {
            max-height: 160px;
            min-height: 30px;
            overflow-y: auto;
            // transition: 0.5s;
        }

        .box-message {
            color: white
            padding: 5px;
            margin-bottom: 5px;

            opacity: 0.5;
            cursor: pointer;
            border-radius: 5px;
            background-color: rgba(0, 0, 0, 0.30);

            transition: 0.5s;

            &:hover {
                opacity: 1;
                // background-color: transparent;
                transition: 0.5s;
            }

            .ok-button {
                opacity: 0.5;
                padding: 5px;
                margin: auto;
                margin-top: 5px;

                text-align: center;
                border-radius: 5px;

                width: 60px;
                background-color: black;
                transition: 0.5s;

                &:hover {
                    opacity: 1;
                    transition: 0.5s;
                }
            }
        }

        .add-dummy-message {
            font-size: 1em;
            cursor: pointer;
            transition: 0.5s;

            &:hover {
                font-size: 1.2em;
                transition: 0.5s;
            }
        }
    }

    .toggle {
        display: block;
        cursor: pointer;
        opacity: 0.5;
        font-size: 2em;

        &:hover {
            opacity: 1;
        }
    }

    // Back to the main user panel
    .icon-back {
        height: 60px;
        width: 60px;

        margin: auto;
        margin-top: 20px;
        margin-bottom: 10px;

        cursor: pointer;
        opacity: 0.5;
        display: block;

        // bottom: 30px;
        // left: 110px;
        position: relative;

        -webkit-transform: rotate(180deg);
        -moz-transform: rotate(180deg);
        -ms-transform: rotate(180deg);
        -o-transform: rotate(180deg);
        transform: rotate(180deg);
        transition: 0.5s;

        &:hover {
            opacity: 1;
            transition: 0.5s;
        }
    }
}
