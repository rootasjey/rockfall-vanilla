// Style for the play super square
.square[function='play']{
    z-index 2

    .mini-icon-panel {
        width 40px
        position absolute
        display inline-block
    }
    .mini-icon{
        width 30px
        height 30px
        opacity 0.2


        position relative

        cursor pointer
        transition 0.5s

        &[isGlowing='true'] {
            animation-duration: 1s
            animation-direction: alternate
            animation-iteration-count infinite
            animation-name: glowIcon
        }
    }

    .game-icon {
        opacity 0.2
        width 40px
        height 40px
        margin 5px
        cursor pointer
        transition 1s

        &:hover{
            // opacity 1
            transition 1s
        }

        &[isGlowing='true'] {
            animation-duration: 1s
            animation-direction: alternate
            animation-iteration-count infinite
            animation-name: glowIcon
        }
    }

    .game-ui {
        height 60%
        width 67%
        margin auto
        margin-top 30px
        transition 0.5s

        .message-confirmation {
            width 400px
            padding 10px
            padding-top 40px
            min-height 100px
            overflow-x hidden
            background transparent

            color white
            text-align center
            font-size 1.5em

            -moz-box-shadow: 0 0 20px #000000;
            -webkit-box-shadow: 0 0 20px #000000;
            box-shadow: 0 0 20px #000000;
            transition 0.5s

            .button {
                color white
                text-align center

                width 100px
                padding 10px
                margin 10px
                margin-top 30px
                opacity 0.5

                cursor pointer
                background black
                display inline-block
                transition 0.5s
            }
        }
    }

    .vertical-pan {
        width 140px
        height 300px
        opacity 0.5
        display inline-block

        text-align center
        cursor pointer
        color white

        margin auto
        margin-top 20px
        margin-left 5px
        padding 5px

        position relative
        background black
        transition 0.5s

        &:hover {
            // opacity 1
            // width 155px
            transition 0.5s

            .text-info {
                color white
            }
        }

        img {
            height 70px
            width 70px
            display block

            margin auto
            margin-top 30px
            margin-bottom 30px
        }

        .text-info {
            margin-top 10px
            display inline-block
            color transparent
        }
    }

    .user-pan {
        width 300px
        margin auto

        text-align center

        .player-panel {
            margin 15px
            display inline-block

            .user-profil {
                height 60px
                width 60px

                margin auto
                margin-bottom 10px

                opacity 0.5
                cursor pointer
                border-radius 30px
                background white
                transition 0.5s

                &:hover {
                    // opacity 1
                    // height 70px
                    // width 70px
                    transition 0.5s

                }

                &[isActive='true'] {
                    animation-duration: 1s
                    animation-direction: alternate
                    animation-iteration-count infinite
                    animation-name: activeUser
                }
            }
            .user-name {
                color white
            }
        }
        
        .buttons-pan {
            width 150px
            margin auto
        }
    }

    .score-panel {
        width 100px

        top 10px
        right 20px
        position absolute

        .score {
            top 10px
            right 40px
            position absolute

            color white
            font-size 1.3em
        }

        .mini-icon {
            height 50px
            width 50px

            right 0
            position absolute
        }
    }

    .powers-panel {
        width 80px

        top 170px
        right -10px
        position absolute

        .power {
            height 30px
            width 30px
            padding 5px

            opacity 0.9
            cursor pointer
            border-width 3px
            border-radius 40px
            border-style solid
            border-color black
            background  rgba(0, 0, 0, 0.5)

            display block
            transition 1s

            &:hover {
                // height 38px
                // width 38px
                // border-width 0px
                // opacity 1
                transition 1s
            }
        }
    }
}

