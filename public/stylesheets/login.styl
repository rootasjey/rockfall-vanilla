/*@import 'nib'*/

/*-------------------*/
/*-----VARIABLES-----*/
/*-------------------*/
center-size = 500px
height-main-ui-component = 500px

main-font = exothinitalic
second-font = quicksandregular

color-alizarin = #e74c3c
color-peter-river = #3498db
color-emerald = #2ecc71
color-belize-hole = #2980b9
color-silver = #bdc3c7
/*------------------*/

.login-ui {
    width: 50%;
    height: 90%;
    margin: auto;

    text-align: center;
    font-size: 1.7em;

    transition: 1s;

    .button {
        padding: 10px;
        margin: 10px;
        font-size: 0.8em;

        cursor: pointer;
        display: inline-block;
        background-color: rgba(0, 0, 0, 0.30);
        transition: 0.5s;

        &:hover {
            background-color: rgba(0, 0, 0, 0.60);
            transition: 0.5s;
        }
    }

    .form {
        width: 200px;
        display: block;
        margin: auto;
        margin-bottom: 0;
        margin-top: 0;


        .form-block {
            display: block;
            margin-bottom: 10px;
        }
        .edit-info {
            font-size: 0.7em;

            text-align: left;
            display: block;
            margin-top: 5px;
        }

        .input {
            display: block;
            margin-top: 10px;
            // margin-bottom: 15px;

            width: 200px;
            height: 20px;

            opacity: 0.5;
            transition: 0.5s;

            &:hover {
                opacity: 0.5;
                border: 5px solid black;
                transition: 0.5s;
            }
            &:focus {
                opacity: 1;
                height: 25px;
                border: 10px solid color-peter-river;
                transition: 0.5s;
            }
        }
        .color-visualiser {
            height: 20px;
            width: 20px;
            transition: 1s;

            margin-left: 10px;
            margin-right: 20px;
            margin-bottom: -5px;
            border-radius: 20px;
            display: inline-block;
        }
        .button-form {
            color: white;
            font-size: 0.9em;
            font-family: main-font;

            opacity: 0.5;
            background-color: black;
            display: inline-block;

            border-width: 0;
            padding: 10px;
            margin-right: 5px;
            margin-top: 10px;

            cursor: pointer;
            transition: 0.5s;

            &:hover {
                opacity: 0.7;
                transition: 0.5s;
            }
        }
    }
}
